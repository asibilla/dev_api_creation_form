{
  "name": "typescript_starter_kit",
  "version": "1.0.0",
  "description": "Starter for projects using webpack with browser-sync and typescript. Includes sass and pug loaders for webpack.",
  "main": "index.ts",
  "scripts": {
    "build": "npm run clean && webpack --config webpack.config.js  --progress --profile --bail",
    "clean": "npm run rimraf -- dist",
    "rimraf": "rimraf",
    "server": "webpack-dev-server --config webpack.config.js --open --progress --profile --watch --content-base src/",
    "start": "npm run server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://asibilla@github.com/asibilla/typescript_starter_kit.git"
  },
  "keywords": [
    "typescript",
    "webpack",
    "browser-sync",
    "pug",
    "sass"
  ],
  "author": "Andy Sibilla",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/asibilla/typescript_starter_kit/issues"
  },
  "homepage": "https://github.com/asibilla/typescript_starter_kit#readme",
  "dependencies": {
    "awesome-typescript-loader": "^3.4.1",
    "node": "^9.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "webpack": "^3.9.1"
  },
  "devDependencies": {
    "@types/react": "^16.0.27",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "css-loader": "^0.28.7",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "pug": "^2.0.0-rc.4",
    "pug-html-loader": "^1.1.5",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "typescript": "^2.6.2",
    "webpack-dev-server": "^2.9.5"
  }
}
